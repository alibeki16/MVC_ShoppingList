@model MVC_ShoppingList.ab_admin
@{
    ViewBag.Title = "Giris";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #main-div {
            height: 900px;
            background-image: url('../../Content/img/building6.jpg');
            background-size: 100% 900px;
            background-repeat: no-repeat;
            background-position: center;
        }

        #box {
            border: 1px solid black;
            height: 100%;
        }

        .insidebox {
            border: 1px solid black;
            margin: 10% auto;
            max-width: 500px;
            min-width: 200px;
            padding: 30px;
            border-radius: 10px;
            background-color: whitesmoke;
        }

        div h1 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .input-group-addon {
            min-width: 40px;
        }

        .form-control {
            border-radius: 0;
        }

        .btn-success {
            border-radius: 0;
        }

        p#para {
            text-align: center;
            font-size: 14px;
        }

        span.validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <div id="main-div">
        <div id="box" class="img-responsive">
            @using (Html.BeginForm())
            {
                <div class="insidebox">
                    <h1>Admin Girişi</h1>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            @Html.TextBoxFor(x => x.ab_admin_mail, new { @class = "form-control", @placeholder = "Mail Adresi", type = "email" })
                        </div>
                        @Html.ValidationMessageFor(x => x.ab_admin_mail, "", new { @style = "color:red" })
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                            @Html.PasswordFor(x => x.ab_admin_password, new { @class = "form-control", @placeholder = "Parola" })
                        </div>
                        @Html.ValidationMessageFor(x => x.ab_admin_password, "", new { @style = "color:red" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Giriş Yap" class="btn btn-success btn-block" />
                    </div>

                    <div class="form-group">
                        <p style="color:red">@ViewBag.error</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>