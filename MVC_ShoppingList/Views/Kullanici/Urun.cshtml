@model MVC_ShoppingList.Models.UrunView
@{
    ViewBag.Title = "Urun";
}

<style>
    td {
        padding: 20px;
    }
</style>

<div class="row">
    <div class="col-lg-8 col-md-8">
        <div>
            <h1>@Model.product_name</h1>
        </div>

        <img src="@Url.Content(@Model.product_image)" style="width:800px; height:450px" />

        <div>
            <h4>Açıklama: </h4>
            <p>@Model.product_desc</p>
        </div>

        <table>
            <tr>
                <td>Ücret: </td>
                <td>@Model.product_price</td>
            </tr>
            <tr>
                <td>Kategorisi: </td>
                <td>@Model.cat_name</td>
            </tr>
        </table>

        @if (Session["ab_user_id"] != null)
        {
            <div>
                <a href="@Url.Action("UrunuListeyeEkle", "Kullanici", new { product_id = Model.product_id })" class="btn btn-primary">Ürünü Listeme Ekle</a>
                </div>
                    }
                </div>
            </div>